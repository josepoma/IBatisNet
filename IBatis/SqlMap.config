<?xml version="1.0" encoding="utf-8"?>
<sqlMapConfig 
  xmlns="http://ibatis.apache.org/dataMapper" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <!-- 配置连接需要的参数 -->
  <properties>
    <property key="server" value="localhost" /><!-- 数据库地址 -->
    <property key="username" value="root" /><!-- 服务器数据库用户名 -->
    <property key="password" value="tiger" /><!-- 服务器数据库密码 -->
    <property key="database" value="ibatis" /><!-- 数据库名称 -->
  </properties>

  <!-- 数据库相关设置 -->
  <settings>
    <setting useStatementNamespaces="false" />
    <setting cacheModelsEnabled="true" />
    <setting validateSqlMap="true" />
  </settings>

  <!-- 配置数据库连接字符串 -->
  <database>
    <provider name="MySql" />
    
    <dataSource name="iBatisNet" connectionString="Server=${server};Database=${database};UserName=${username};Password=${password};CharSet=utf8;"/>
  </database>
  
  <!-- 配置数据库和实体类的配置文件 -->
  <sqlMaps>
    
    <!-- embedded是指的是映射文件，需要包含文件夹,IBatis指的是当前的命名空间 -->
    <sqlMap embedded="MapFiles.Article.xml, IBatis" />

  </sqlMaps>

</sqlMapConfig>